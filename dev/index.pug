mixin switch( data )
	.switch( data-multi-switch= data )&attributes( attributes )
		.guide
		.slider
			block

doctype html 
html( lang='en' )
	head
		title Multi Switches Demo
		meta( name='viewport', content='width=device-width, height=device-height, initial-scale=1.0' )
		meta( http-equiv='X-UA-Compatible' content='IE=Edge' )
		meta( charset='utf-8' )

		link( rel='stylesheet', href='style.css' )
		script( src='MultiSwitches.js' )
		script( src='script.js' )

	body
		.page
			.container.c1
				.description Простые независимые переключатели
				.inner
					+switch({ targets: '.c1 .t1' }) 1
					+switch({ targets: '.c1 .t2' }) 2
					+switch({ targets: '.c1 .t3' }) 1
				.inner
					.target.t1 1
					.target.t2 2
					.target.t3 3
	//-
			.container.c2
				.description Переключатели с несколькими целями
				.inner
					+switch({ targets: '.c2 .t1' }) 1
					+switch({ targets: '.c2 .t2' }) 2
				.inner
					.target.t1 1
					.target.t2 2
					.target.t1 1
					.target.t2 2

			.container.c3
				.description Переключатели с общими целями
				.inner
					+switch({ targets: '.c3 .t1' }) 1
					+switch({ targets: '.c3 .t2' }) 2
					+switch({ targets: '.c3 .t1' }) 1
					+switch({ targets: '.c3 .t2' }) 2
				.inner
					.target.t1 1
					.target.t2 2

			.container.c4
				.description Переключатели связанне посредством общих целей
				.inner
					+switch({ targets: '.c4 .t1, .c4 .t2' }) 1|2
					+switch({ targets: '.c4 .t2, .c4 .t3' }) 2|3
					+switch({ targets: '.c4 .t3, .c4 .t4' }) 3|4
				.inner
					.target.t1 1
					.target.t2 2
					.target.t3 3
					.target.t4 4

			.container.c5.scope-orange
				.description Переключатели с #[span.text-orange областью действия]
				.inner
					+switch({ targets: '.c5 .t1', scope: '.c5' }) 1
					+switch({ targets: '.c5 .t2', scope: '.c5' }) 2
					+switch({ targets: '.c5 .t3', scope: '.c5' }) 3
				.inner
					.target.t1 1
					.target.t2 2
					.target.t3 3
					
			.container.c6
				.description Переключатели с #[span.text-cyan областью действия]
				.inner
					+switch({ targets: '.c6 .t1', scope: '.c6 .target' }) 1
					+switch({ targets: '.c6 .t2', scope: '.c6 .target' }) 2
					+switch({ targets: '.c6 .t3', scope: '.c6 .target' }) 3
				.inner
					.target.t1.scope-cyan 1
					.target.t2.scope-cyan 2
					.target.t3.scope-cyan 3

			.container.c7
				.description Переключатели #[span.text-dark изолированные] друг от друга
				.inner
					+switch({ targets:  '.c7 .t1', isolate: '.c7 .isolated' }).isolated 1
					+switch({ targets:  '.c7 .t2', isolate: '.c7 .isolated' }).isolated 2
					+switch({ targets:  '.c7 .t3', isolate: '.c7 .isolated' }).isolated 3
				.inner
					.target.t1 1
					.target.t2 2
					.target.t3 2

			.container.c8
				.description Переключатели #[span.text-dark изолированные] друг от друга
				.inner
					+switch({ targets: '.c8 .t1', isolate: '.c8 .isolated' }).isolated 1
					+switch({ targets: '.c8 .t2' }) 2
					+switch({ targets: '.c8 .t2', isolate: '.c8 .isolated' }).isolated 2
				.inner
					.target.t1 1
					.target.t2 2

			.container.c9.scope-white
				.description Здесь все включено
				.inner
					+switch({ targets: '.c9 .t1', scope: '.c9', isolate: '.c9 .isolated' }).isolated 1
					+switch({ targets: '.c9 .t2', scope: '.c9 .scope-white', isolate: '.c9 .isolated' }).isolated 2
					+switch({ targets: '.c9 .t3', scope: '.c9 .scope-white' }) 3
					+switch({ targets: '.c9 .t4', scope: '.c9' }) 4
				.inner
					.target.t1 1
					.target.t2.scope-white 2
					.target.t3.scope-white 3
					.target.t4 4
